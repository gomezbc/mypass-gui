---
import "@fontsource-variable/onest";
import Layout from "../layouts/Layout.astro";
import Connection from "../components/Connection.svelte";
---

<Layout title="Welcome to mypass-gui">
  <div
    class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.25),rgba(255,255,255,0))]"
  >
  </div>
  <main
    class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0"
  >
    <a
      href="#"
      class="flex items-center mb-6 text-2xl font-semibold text-white"
    >
      <img
        class="w-8 h-8 mr-2"
        src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg"
        alt="logo"
      />
      MyPass
    </a>
    <!--Check for the best option https://docs.astro.build/en/core-concepts/framework-components/#hydrating-interactive-components -->
    <Connection client:visible />
  </main>
</Layout>
